<h1>All Appointments</h1>

<% if @appointments.any? %>
  <ul>
    <% @appointments.each do |appointment| %>
      <li>
        <%= appointment.customer.name %> has an appointment with <%= appointment.animal.name %> on <%= appointment.scheduled_at %>
        
        <%= link_to 'Edit', edit_customer_appointment_path(appointment.customer_id, appointment), data: { turbo: false }, class: 'btn btn-primary' %>
        <%= button_to 'Delete', customer_appointment_path(appointment.customer_id,appointment), method: :delete, data: { turbo: false, confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </li>
    <% end %>
  </ul>

  <%= link_to 'Schedule a Cuddle Session', customers_path, class: 'btn btn-primary' %>
<% else %>
  <p>No appointments scheduled yet.</p>
  <%= link_to 'Schedule a Cuddle Session', customers_path, class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Add New Animal', new_animal_path, class: 'btn btn-success' %>
