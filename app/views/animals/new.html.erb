<%= form_with model: @animal, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  
  <div>
    <%= form.label :species %>
    <%= form.text_field :species %>
  </div>

  <div>
    <%= form.submit 'Create Animal', class: 'btn btn-success' %>
  </div>
<% end %>

<%= link_to 'Back to Appointments', root_path %>