<h1>New Customer</h1>

<%= form_with(model: [@customer, @appointment], local: true) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.submit 'Create Customer', class: 'btn btn-success' %>
  </div>
<% end %>
