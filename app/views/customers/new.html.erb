<%= form_with(model: @customer, local: true) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.submit 'Create Customer', class: 'btn btn-success' %>
  </div>
<% end %>

<%= link_to 'Back to Appointments', root_path %>