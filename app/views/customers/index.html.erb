<h1>All Customers</h1>
<%= link_to 'Add New Customer', new_customer_path, class: 'btn btn-primary' %>

<ul>
  <% @customers.each do |customer| %>
    <li>
      <%= link_to customer.name, new_customer_appointment_path(customer) %>
      <%= button_to 'Delete', customer_path(customer), method: :delete, data: { turbo: false, confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    </li>
  <% end %>
</ul>

<%= link_to 'Back to Appointments', root_path %>

